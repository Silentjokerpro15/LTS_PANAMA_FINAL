<!DOCTYPE html>
<html lang="en">
<head><%- include('../Layouts/head') %></head>
<body class="animsition">
<div class="page-wrapper">
    <header ><%- include('../Layouts/header.ejs') %></header>
    <style>
        h1.color_azul{
            color:#0069d9;
        }
    </style>
    <%- include('../Layouts/left_sidebar_dispatcher') %>

    <div class="page-container">
        <%- include('../Layouts/header_menu') %>


        <div class="main-content">

            <div align="center"  >

                <div class="card">
                    <div class="card-header">
                        <h1 class="color_azul"> Recolección de información del manifest</h1>
                    </div>
                    <div class="card-body card-block">

                        <!--Envio de datos para hacer registro de usuarios-->
                        <form action="/dispatcher/create/save" method="post" class="form-horizontal">


                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="name" class=" form-control-label">Manifest</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="idmanifest" name="idmanifest" placeholder="Escriba el Id" class="form-control">

                                </div>
                            </div>
                            

                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="fecha" class=" form-control-label">Fecha</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="fecha" name="fecha" placeholder="Escriba la fecha" class="form-control">

                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="camion" class=" form-control-label">Placa del camion</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="camion" name="camion" placeholder="placa del camion" class="form-control">

                                </div>
                            </div>





                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="conductor" class=" form-control-label">Conductor</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="conductor" name="conductor" placeholder="Conductor del camion" class="form-control">

                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="ruta" class=" form-control-label">Ruta</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="ruta" name="ruta" placeholder="ruta del manifest" class="form-control">

                                </div>
                            </div>
                            <div>
                                <input type="submit" class="form-control" value="Submit" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
        </div>

    </div>
</div>
<footer><%- include('../Layouts/footer') %></footer>

</body>
</html>