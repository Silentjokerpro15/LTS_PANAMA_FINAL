<!DOCTYPE html>
<html lang="en">
<head><%- include('../Layouts/head') %></head>
<body class="animsition">
<div class="page-wrapper">
    <header ><%- include('../Layouts/header.ejs') %></header>
    <style>
        h1.color_azul{
            color:#0069d9;
        }
    </style>
    <%- include('../Layouts/left_sidebar_logistics') %>

    <div class="page-container">
        <%- include('../Layouts/header_menu') %>


        <div class="main-content">

            <div align="center"  >

                <div class="card">
                    <div class="card-header">
                        <h1 class="color_azul"> Creacion de Rutas </h1>
                    </div>
                    <div class="card-body card-block">

                        <!--Envio de datos para hacer registro de usuarios-->
                        <form action="/logistics/nuevo/crear" method="post" class="form-horizontal">


                            <div class="row form-group">
                            <div class="col col-md-3">
                                <label for="inicio" class=" form-control-label">Inicio de la Ruta</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <select name="inicio" class="form-control">
                         
                                
                                <option value="BOCAS DEL TORO">BOCAS DEL TORO</option>
                                <option value="CHIRIQUI">CHIRIQUI</option>
                                
                                </select>
                            </div>
                        </div>



                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="fin" class=" form-control-label">Fin de la Ruta</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <select name="fin" class="form-control">

                           
                                    <option value="BOCAS DEL TORO">BOCAS DEL TORO</option>
                                    <option value="CHIRIQUI">CHIRIQUI</option>
                                    </select>
                                </div>
                            </div>


                            

                            <div class="row form-group">
                            <div class="col col-md-3">
                                <label for="id_ruta" class=" form-control-label">Identicador de Ruta</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <input type="text" id="id_ruta" name="id_ruta" placeholder="Escriba el id_ruta..." class="form-control">
        
                            </div>
                            </div>

                  
                            <div>
                                <input type="submit" class="form-control" value="Submit" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
        </div>

    </div>
</div>
<footer><%- include('../Layouts/footer') %></footer>

</body>
</html>