<!DOCTYPE html>
<html lang="en">
<head><%- include('../Layouts/head') %></head>
<body class="animsition">
<div class="page-wrapper">
    <header ><%- include('../Layouts/header.ejs') %></header>
    <style>
        h1.color_azul{
            color:#0069d9;
        }
    </style>
    <%- include('../Layouts/left_sidebar_admin') %>

    <div class="page-container">
        <%- include('../Layouts/header_menu') %>


        <div class="main-content">

            <div align="center"  >

                <div class="card">
                    <div class="card-header">
                        <h1 class="color_azul"> Modificar Usuario de Usuarios</h1>
                    </div>
                    <div class="card-body card-block">

                        <!--Envio de datos para hacer registro de usuarios-->
                        <form action="/usuarios/modificar/<%= list._id%>" method="post" class="form-horizontal">


                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="name" class=" form-control-label">Nombre</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="name" name="name" placeholder="Escriba el Nombre..." class="form-control"  value="<%= list.local.name %>">

                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="lastname" class=" form-control-label">Apellido</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="lastname" name="lastname" placeholder="Escriba el Apellido..." class="form-control"value="<%= list.local.lastname %>" >

                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="age" class=" form-control-label">Edad</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="number" id="age" name="age" placeholder="Escriba la Edad..." class="form-control" value="<%= list.local.age %>">

                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="id" class=" form-control-label">ID</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="id" name="id" placeholder="..." class="form-control" value="<%= list._id%>">

                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="role" class=" form-control-label">Role</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <select name="role" class="form-control"  >
                                        <option value="<%= list.local.role %>"><%= list.local.role %></option>
                                        <option value=""></option>
                                        <option value="ADMIN">ADMIN</option>
                                        <option value="COUNTER">COUNTER</option>
                                        <option value="MANIFEST">MANIFEST</option>
                                        <option value="DISPATCHER">DISPATCHER</option>
                                        <option value="RECEIVERS">RECEIVERS</option>
                                        <option value="LOGISTICS">LOGISTICS</option>

                                    </select>
                                </div>
                            </div>
                            <div class="row form-group">
                            <div class="col col-md-3">
                                <label for="city" class=" form-control-label">Provincia</label>
                            </div>
                            <div class="col-12 col-md-9">
                            <select name="origen" class="form-control">
                            <option value="<%= list.local.role %>"><%= list.local.origen %></option>
                                <option ></option>
        
                                <option value="BOCAS DEL TORO">BOCAS DEL TORO</option>
                                <option value="CHIRIQUI">CHIRIQUI</option>
                               
                            </select>
                        </div>
                    </div>



                            <div class="row form-group">
                            <div class="col col-md-3">
                                <label for="city" class=" form-control-label">Ciudad</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <select name="city" class="form-control">
                                <option value="<%= list.local.city %>"><%= list.local.city %></option>
                                <option value=""></option>

                                    <option value="David">David</option>
                                  
                                </select>
                            </div>
                        </div>






                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="hf-email" class=" form-control-label">Correo Electronico</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="email" id="email" name="email" placeholder="Introdusca el Correo Electronico..." class="form-control" value="<%= list.local.email %>">

                                </div>
                            </div>


                            <div>
                                <input type="submit" class="form-control" value="Submit" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
            </div>

        </div>
    </div>
    <footer><%- include('../Layouts/footer') %></footer>

</body>
</html>